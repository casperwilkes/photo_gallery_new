{{ form_open({'class': 'form-horizontal','enctype': 'multipart/form-data'}) }}
<fieldset>
    <div class="col-md-6">
        <legend>Update Profile Image</legend>
        {{ form_csrf() }}
        <div class="form-group">
            {{ form_label('Select Image', 'image', {'class': 'control-label'}) }}
            {{ form_file('image') }}
        </div>
        <div class="form-group">
            <div class="btn-group btn-group-sm">
                {{ form_submit('submit', 'Update', {'class': 'btn btn-primary'}) }}
                {{ form_reset('reset', 'Reset', {'class': 'btn btn-warning'}) }}
                {{ html_anchor('profile/edit', 'Cancel', {'class': 'btn btn-default'}) }}
            </div>
        </div>
    </div>
</fieldset>
{{ form_close() }}