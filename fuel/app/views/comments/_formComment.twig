{{ form_open({'class':'form-horizontal'})}}
<fieldset>
    {{ form_csrf() }}
    <div class="form-group">
        <div class="col-md-12">
            {{ form_textarea('comment', input_post('comment'), {'class':'form-control', 'placeholder':'What would you like to say?', 'rows':'4', 'required':'required'}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            {{ form_submit('submit', 'Submit Comment', {'class': 'btn btn-primary'}) }}
        </div>
    </div>
</fieldset>
{{ form_close() }}
