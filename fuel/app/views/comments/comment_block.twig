<div class="row top-buffer">
    {% if comments is not empty %}
        {% for comment in comments %}
            <div class="row">
                <div class="col-sm-6 col-sm-offset-1 col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-1">
                    <div class="well well-sm">
                        <div class="clearfix">
                            <div class="col-md-11 col-sm-11 col-xs-11">{{ html_anchor('profile/view/'~comment.user.username, comment.user.username) }} wrote:</div>
                            {% if admin == true %}
                                <div class="col-md-1 col-sm-1 col-xs-1">
                                    {{ html_anchor('admin/comments_delete/' ~ photo.id ~ '/' ~ comment.id, '<span class="glyphicon glyphicon-remove-sign"></span>', {'class': 'btn btn-xs btn-danger'}) }}
                                </div>
                            {% endif %}
                            <div class="col-md-11 col-sm-offset-1 col-xs-offset-1 col-md-offset-1"><p>{{ comment.body | raw | nl2br }}</p></div>
                            <div class="col-md-12 text-right"><small>{{ comment.created_at | date(' F d, Y g:i a') }}</small></div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="col-sm-6 col-sm-offset-1 col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-1">
            <div class="well well-sm">
                No comments yet
            </div>
        </div>
    {% endif %}
</div>